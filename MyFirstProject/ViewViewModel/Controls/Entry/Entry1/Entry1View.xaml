<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModel.Controls.Entry.Entry1.Entry1View">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Enter Text here"
                   PlaceholderColor="Blue"
                   x:Name="EntryValue"
                   Text="{Binding Entry1Text}"
                   TextColor="Red"
                   WidthRequest="300"
                   HorizontalOptions="Center"/>

            <Button Text="Submit"
                    HorizontalOptions="Center"
                    FontAttributes="Bold"
                    TextColor="White"
                    BackgroundColor="Purple"
                    Command="{Binding OnEntry1Clicked}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>