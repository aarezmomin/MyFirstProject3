<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModel.Controls.ControlsMenuView"
             Title = "{Binding Title}">

    <ContentPage.Content>
        <StackLayout>
            <Button Grid.Row="0"
                   Grid.Column="0"
                   Text="Slider"
                   Command="{Binding OnSliderViewClicked}"/>
            <Button Grid.Row="0"
                   Grid.Column="0"
                   Text="Stepper"
                   Command="{Binding OnSteppersViewClicked}"/>
            <Button Grid.Row="0"
                   Grid.Column="0"
                   Text="Switch"
                   Command="{Binding OnSwitchViewClicked}"/>
            <Button Grid.Row="0"
                   Grid.Column="0"
                   Text="t"
                   Command="{Binding OnListViewIconsClicked}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>